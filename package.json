{
  "name": "x-to-obsidian",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --filter @x-to-obsidian/server dev",
    "build": "bun run --filter '*' build",
    "lint": "oxlint .",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check .",
    "typecheck": "tsc --build",
    "prepare": "effect-language-service patch"
  },
  "devDependencies": {
    "@effect/language-service": "^0.62.5",
    "oxlint": "^0.16.0",
    "typescript": "^5.7.2"
  }
}
