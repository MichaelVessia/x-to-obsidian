{
  "manifest_version": 3,
  "name": "X to Obsidian",
  "version": "0.0.1",
  "description": "Scrape X/Twitter bookmarks and save them to Obsidian vault",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*", "http://localhost:3000/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
